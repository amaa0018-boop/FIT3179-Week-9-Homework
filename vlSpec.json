{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "title": "Employment Size of Tourism Businesses Across Australia",
    "width": 800,
    "height": 500,
    "layer": [
        {
            "data": {
                "url": "data/ne_10m_admin_1_states_provinces.json",
                "format": {"type": "topojson", "feature":"ne_10m_admin_1_states_provinces"}
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {"url": "data/tourism-businesses-australian-regions-sum.csv"},
                        "key": "State",
                        "fields": ["GrandTotal"]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "gray",
                "stroke": "white"
            },
            "projection": {"type": "mercator"},
            "encoding": {
                "fill": {"field": "GrandTotal", "type": "quantitative", "scale": {"scheme": "blues"}, "title": "Employment Size"},
                "tooltip": [
                    {"field": "properties.name", "type": "nominal"},
                    {"field": "GrandTotal", "type": "quantitative", "title": "Employment Size"}
                ]
            }
        }
    ]
}